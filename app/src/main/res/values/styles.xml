<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="content_layout">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">@dimen/StandardMargin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/backGround</item>
    </style>

    <!--TextView Styles-->
    <style name="header">
        <item name="android:layout_marginTop">@dimen/StandardMargin</item>
        <item name="android:textSize">@dimen/TextSizeHeader</item>
        <item name="android:text">@string/title</item>
    </style>
    <style name="header2">
        <item name="android:textSize">@dimen/TextSizeHeader2</item>
        <item name="android:text">@string/headerContentNews</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
    <style name="content">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:background">@color/contentBackground</item>
        <item name="android:padding">8dp</item>
        <item name="android:visibility">visible</item>
        <item name="android:textSize">@dimen/TextSizeContent</item>
    </style>


    <style name="buttonContentSwitcher">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_alignParentTop">true</item>

    </style>

<!--Pictures-->
    <style name="pictures">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
    </style>


</resources>
